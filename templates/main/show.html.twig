{% extends 'base.html.twig' %}

{% block title %}Station info{% endblock %}

{% block body %}

    <div class="card bg-light mb-3">
        <div class="card-header"><h4>Info about station {{ stationdata.name }}</h4></div>

        <div class="card-body">
            <h5>Weatherdata from the past ...</h5>
            <table class="locations table table-striped table-bordered">
                <thead>
                <tr class="table-primary">
                    <th scope="col">  </th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>  </td>
                </tr>

                </tbody>
            </table>
        </div>
        <div class="card-body">
            <h5>Information</h5>
            <table class="table table-hover">
                <tbody>
                <tr>
                    <td> Country </td>
                    <td>  {%  if geolocdata is not null %}{{ geolocdata.country }}{% else %} Geen info beschikbaar {% endif %}</td>
                </tr>
                    <tr>
                        <td> Longitude </td>
                        <td> {{ stationdata.longitude }}</td>
                    </tr>
                    <tr>
                        <td> Latitude </td>
                        <td> {{ stationdata.latitude }}</td>
                    </tr>
                    <tr>
                        <td> Elevation </td>
                        <td> {{ stationdata.elevation }}</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Station info{% endblock %}

{% block body %}
{% for data in stationdata %}
    <div class="card bg-light mb-3">
        <div class="card-header"><h4>Info about station {{ data.name }}</h4></div>
{% endfor %}
        <div class="card-body">
            <h5>Weatherdata from the past ...</h5>
            <table class="locations table table-striped table-bordered">
                <thead>
                <tr class="table-primary">
                    <th scope="col">  </th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>  </td>
                </tr>

                </tbody>
            </table>
        </div>
        <div class="card-body">
            <h5>Information</h5>
            <table class="table table-hover">
                <tbody>
                <tr>
                    <td> Country </td>
                    {% for data in geolocdata %}
                        <td>  {%  if data is not null %}{{ data.country }}{% else %} No info {% endif %}</td>
                    {% endfor %}
                </tr>
                {% for data in stationdata %}
                    <tr>

                        <td> Longitude </td>
                        <td> {{ data.longitude }}</td>
                    </tr>
                    <tr>
                        <td> Latitude </td>
                        <td> {{ data.latitude }}</td>
                    </tr>
                    <tr>
                        <td> Elevation </td>
                        <td> {{ data.elevation }}</td>
                    </tr>
                 {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}